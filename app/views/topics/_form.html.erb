<%= form_for(@topic) do |form| %>
    <% if @topic.errors.any? %>
      <% @topic.errors.full_messages.each do |error| %>
        <%= alert_generator error %>
      <% end %>
    <% end %>
  
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :topic_title, class: "form-control", placeholder: 'Title' %>
    </div>
  
    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
  